.containe{
  width: 100%;
  /*height: 100%;*/
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.phone{
  margin: 10px auto;
  width: 90%;
  height: 40px;
  display: flex;
  background-color: #eee;
}
.iconphone{
  width: 20%;
  border-right: solid 1px black;
}
.inputphone{
  flex: 1;
  width: 100%;
  height: 30px;
  box-sizing: border-box;
  padding-left: 10px;
  padding-top: 10px;
  line-height: 40px;
}
.yanzheng{
  margin: 10px auto;
  width: 90%;
  height: 40px;
  display: flex;
  justify-content: space-between;
}
.yan{
  width: 60%;
  height: 40px;
  background-color: #eee;
  display: flex;
}
.iconyanzheng{
  width: 20%;
  border-right: solid 1px black;
}
.inputyanzheng{
  flex: 1;
  height: 40px;
  padding-left: 10px;

}
.btn{
  width: 35%;
  font-size: 12px;
  background-color: red;
  color: white;
  line-height: 30px;
  text-align: center;
}
.queding{
  width: 50%;
  margin: 30px auto;
  background-color: red;
  font-size: 14px;
  height: 40px;
  line-height: 40px;
  text-align: center;
}
